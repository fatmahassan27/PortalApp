@model DepartmentVM

@{
    ViewData["Title"] = "Creat";
}

<div class="block-header">
    <h2>Creat Department</h2>

</div>
<form class="form-group" asp-controller="Department" asp-action="Craet" >

    <label asp-for="Name">Department Name</label>
    <input type="text"  class="form-control" asp-for="Name"/>
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />

   <label asp-for="Code">Department Code</label>
   <input type="number" class="form-control" asp-for="Code" />
